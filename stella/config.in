dep_bool_menu "Stella Light" STELLA_SUPPORT $UDP_SUPPORT
  int "Stella UDP Port" STELLA_UDP_PORT 2342
  dep_bool "Gamma correction (EXPERIMENTAL)" STELLA_GAMMACORRECTION $CONFIG_EXPERIMENTAL
  dep_bool "Higher frequency" STELLA_HIGHFREQ
  dep_bool "Moodlight" STELLA_MOODLIGHT
  dep_bool "Stella polling" STELLA_RESPONSE
  if [ "$STELLA_RESPONSE" = "y" ]; then
    int "Stella Broadcast Response UDP Port" STELLA_BROADCAST_UDP_PORT 2341
  fi
  dep_bool "Acknowledge all packets" STELLA_RESPONSE_ACK
  choice 'On device boot'			\
  "0% stella_start_zero	\
  100% stella_start_all	\
  EEPROM stella_start_eeprom	\
  Moodlight stella_start_moodlight"	\
	'0%' STELLA_START
endmenu
